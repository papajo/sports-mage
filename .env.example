# Environment variables for Sports Data Hub
# API keys and configuration settings

# API-Sports Configuration
API_SPORTS_KEY=your_api_sports_key_here
API_SPORTS_HOST=v3.football.api-sports.io

# SportRadar Configuration
SPORTRADAR_API_KEY=your_sportradar_key_here
SPORTRADAR_TENNIS_ACCESS_LEVEL=trial
SPORTRADAR_CRICKET_ACCESS_LEVEL=trial

# Database Configuration
# These are automatically handled by Cloudflare D1

# Application Settings
NEXT_PUBLIC_APP_NAME=Sports Data Hub
NEXT_PUBLIC_APP_URL=https://sports-data-hub.com
NEXT_PUBLIC_DEFAULT_LOCALE=en

# Feature Flags
NEXT_PUBLIC_ENABLE_TENNIS=true
NEXT_PUBLIC_ENABLE_CRICKET=true
NEXT_PUBLIC_ENABLE_CHATBOT=true
NEXT_PUBLIC_ENABLE_PAYMENT_TESTING=true

# Update Intervals (in seconds)
LIVE_UPDATE_INTERVAL=60
DAILY_UPDATE_INTERVAL=86400
